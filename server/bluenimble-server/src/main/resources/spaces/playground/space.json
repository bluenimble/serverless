{
	"namespace": "playground",
	"name": "Playground Space",
	
	"secrets": {
		"default": {
			"key": "tNPcBu47rP0B1hJK",
			"algorithm": "AES",
			"age": "60"
		}
	},

	"features": {
		"scripting": {
			"default": {
				"provider": "scripting.javascript"
			}
		},
		"database": {
			"default": {
				"provider": "database.orientdb",
				"spec": {
					"host": "localhost",
					"database": "playground",
					"auth": {
						"user": "root", "password": "root"
					}
				}
			}
		},
		"storage": {
			"default": {
				"provider": "storage.filesystem",
				"spec": {
					"mount": "playground"
				}
			}
		},
		"remote": {
			"default": {
				"provider": "remote.default",
				"spec": {
					"trustAll": "true",
					"headers": {
						"Content-Type": "application/json"
					},
					"serializer": "json"
				}
			},
			"elasticsearch-assets": {
				"provider": "remote.default",
				"spec": {
					"endpoint": "http://localhost:9200/assets/",
					"serializer": "json"
				}
			}
		},
		"indexer": {
			"assets": {
				"provider": "indexer.elasticsearch",
				"spec": {
					"remote": "elasticsearch-assets"
				}
			}
		},
		"shell": {
			"default": {
				"provider": "shell.apache"
			}
		}
	},
	
	"tracer": {
		"class": "!tracing.log4j:default"
	},	
	
	"runtime": {
		"timeout": "10000",
		"tus": {
			"default": {
				"storage": "default",
				"multiTenant": "true",
				"folders": {
					"data": "raw"
				}
			}
		},
		"rewrite": {
            "path": {
                "rules": [{
                    "if": "ends: /storage", "negate": "true", "methods": ["OPTIONS"], "then": { "bypass": "true" }
                }]
            }
        }
	}
}