{
	"namespace": "playground",
	"name": "Playground Space",
	
	"statusManager": {
		"class": "com.bluenimble.platform.api.impls.DefaultStatusManager",
		"properties": {
			"readOnly": "[ this.readOnly | 'false' ]",
			"delay": "[ this.delay | '0' ]",
			"period": "[ this.period | '20' ]"
		}
	},
	
	"secrets": {
		"default": {
			"key": "tNPcBu47rP0B1hJK",
			"algorithm": "AES",
			"age": "60"
		}
	},

	"features": {
		"scripting": {
			"default": {
				"provider": "scripting.javascript"
			}
		},
		"database": {
			"default": {
				"provider": "database.orientdb",
				"spec": {
					"host": "localhost",
					"database": "playground",
					"auth": {
						"user": "root", "password": "root"
					}
				}
			}
		},
		"storage": {
			"default": {
				"provider": "storage.filesystem",
				"spec": {
					"mount": "playground"
				}
			}
		},
		"remote": {
			"default": {
				"provider": "remote.default",
				"spec": {
					"trustAll": "true",
					"headers": {
						"Content-Type": "application/json"
					},
					"serializer": "json"
				}
			}
		}
	},
	
	"tracer": {
		"class": "!tracing.log4j:default"
	},	
	
	"runtime": {
		"timeout": "10000",
		"tus": {
			"default": {
				"storage": "default",
				"multiTenant": "true",
				"folders": {
					"data": "raw-files"
				}
			}
		},
		"rewrite": {
            "path": {
                "rules": [{
                    "methods": ["OPTIONS"], "if": "ends: /storage", "negate": "true", "then": { "bypass": "true" }
                }]
            }
        }
	}
}